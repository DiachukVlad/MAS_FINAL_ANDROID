<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mas_final">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VAApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MAS_FINAL"
        android:usesCleartextTraffic="true">
        <activity android:name=".viewLayers.views.login.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".viewLayers.views.register.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".viewLayers.views.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>